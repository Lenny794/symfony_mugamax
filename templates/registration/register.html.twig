{% extends 'base.html.twig' %}
{% block stylesheets %}
	{#{{ encore_entry_link_tags('app') }}#}

	<!-- Bootstrap CSS -->
	<link
	href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> <!-- Icon Bootstrap -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

	<link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
	<link rel="stylesheet" href="{{ asset('css/all.min.css') }}">
	<link rel="stylesheet" href="{{ asset('css/nav.css') }}">
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">
	<link rel="stylesheet" href="{{ asset('css/footer.css') }}">
	<link rel="stylesheet" href="{{ asset('css/user_inscription.css') }}">
	<link rel="stylesheet" href="{{ asset('css/font.css') }}">
{% endblock %}
{% block title %}Register
{% endblock %}

{% block body %}
	<section>
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		<div class="container my-4">
			{{ form_start(registrationForm) }}
			<div class="row">
				<div
					id="login" class="col-md-5 mt-4">
					<!-- ********************Se-connecter******************************************* -->
					<h2>Information compte</h2>
					<div class="col-xs-6 col-md-6">
						{{ form_row(registrationForm.gender) }}
					</div>
					<div class="row">
						<div class="col-xs-6 col-md-6">
							{{ form_row(registrationForm.pseudo) }}
						</div>
					</div><br>
					<div class="col-xs-6 col-md-6">
						{{ form_row(registrationForm.plainPassword) }}
					</div><br>
				</div>
				<div
					id="signUp" class="col-md-6 mt-4">
					<!-- ******************Créer un compte********************* -->
					<h2>Information personnel</h2>
					<div class="row">
						<div class="col-xs-6 col-md-6">
							{{ form_row(registrationForm.firstname) }}
						</div>
						<div class="col-xs-6 col-md-6">
							{{ form_row(registrationForm.lastname) }}
						</div>
					</div><br>
					{{ form_row(registrationForm.email) }}
					<br>
					<div class="row">
						<div class="col-xs-4 col-md-10" style="margin-left: 0px;padding-left: 0rem;">
							{{ form_row(registrationForm.birthdate) }}
						</div>
					</div><br>
					<div class="row">
						<div class="col-xs-4 col-md-6">
							{{ form_row(registrationForm.country) }}
						</div>
						{{ form_row(registrationForm.agreeTerms) }}
						<a href="{{ path('c_g_u') }}">Conditions générales d'utilisation du site</a>
					</div><br>
					<button id="signUpButton" class="btn btn-lg btn-primary btn-block signup-btn" type="submit">Créer mon
											                        compte
					</button>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</section>
{% endblock %}
{% block footer %}
	<footer class="text-center py-6 mt-4">
		<div>
			<img src="{{ asset('logoMugamax/logo_small_2.png') }}" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="d-block mb-2">
		</img>&copy; Mugamax - 2021 - All Right Reserved
	</div>
</footer>{% endblock %}
