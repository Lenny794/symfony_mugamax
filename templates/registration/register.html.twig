{% extends 'base.html.twig' %}
{% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Icon Bootstrap -->   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/nav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/indentification.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font.css') }}">
{% endblock %}
{% block title %}Register{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }} 
      
        <div class="container my-4">
            <div id="blockLeftAndRight" class="row">
                <div id="signUp" class="col-md-6 mt-4">
                    <!-- ******************Créer un compte********************* -->
                    <h2>Créer un compte</h2>
                    <form id="signUpForm" action="r" method="post" accept-charset="utf-8" class="form" role="form">
                        <label>Genre : </label><br>
                        <label class="radio-inline">
                            <i class="fas fa-male"></i> Homme <input type="radio" name="gender" value="M" id="male" />
                        </label>
                        <label id="labelFemale" class="radio-inline">
                            <i class="fas fa-female"></i> Femme <input type="radio" name="gender" value="F" id="female" />
                        </label><br></br>
                        {{ form_widget(registrationForm) }}
                        <br> 
                        <button id="signUpButton" class="btn btn-lg btn-primary btn-block signup-btn" type="submit">Créer mon
                            compte
                        </button>
                       
                    </form>
                </div>
            </div>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}

{% block footer %}
    <footer class="text-center bg-light py-6 mt-4">
        <div>
            <img src="{{ asset('logoMugamax/logo_small_icon_only_inverted.png') }}" width="24" height="24" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="d-block mb-2">
            </img>&copy; Mugamax - 2021 - All Right Reserved
        </div>
    </footer>
{% endblock %}
