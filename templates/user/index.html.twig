{% extends 'base.html.twig' %}
{% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Icon Bootstrap -->   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/nav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/page-utilisateur.css') }}">
    <link rel="stylesheet" href="{{ asset('css/checkbox1.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font.css') }}">
{% endblock %}
{% block title %}Profil de {{ app.user.pseudo }} {% endblock %}

{% block body %}
    <div class="container my-4">
        <div id="containerParam" class="row">
            <div class="col-md-5 mt-4">
                <!-- ********************Profil********************** -->
                <section>
                    <div id="containerParam2" class="row">
                        <div id="containerParam3" class="col-8">
                            <div id="paramètre">
                                <div id="paramètreHeader" class="lp-header"> <span
                                        id="spanParamètreTitle">Paramètres</span>
                                </div>
                                <!-- Paramètre compte -->
                                <div id="paramètreCompte"
                                    class="settings-button slide-in-out ts-500 account-s active">
                                    <div id="paramètreCompteHeadTitle" class="head-title"> <i id="iconChevronCompte"
                                            class="bi bi-chevron-right"></i> <i id="iconUserCompte"
                                            class="bi bi-person-fill"></i> <a id="spanCompte"
                                            href="page-utilisateur-compte.html">Compte</a>
                                    </div>
                                    <div id="subMenuCompte" class="sub-menu slide-item">
                                        <div id="tabProfil" class="sub-title" data-scrollto="profile-form">
                                            <a href="#accTitleTxtleft1">Profil</a>
                                        </div>
                                        <div id="tabPréférence" class="sub-title" data-scrollto="preferences">
                                            <a href="#accTitleTxtleft2">Préférences</a>

                                        </div>
                                        <div id="tabDeleteAcc" class="sub-title acc-setting-menu-cancel-acc"
                                            data-scrollto="cancel-account-block"><a
                                                href="#accTitleTxtleft3">Supprimer le compte</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Paramètre notification -->
                                <div id="paramètreNotif"
                                    class="settings-button slide-in-out ts-500 notifications closed">
                                    <div id="paramètreNotifHeadTitle" class="head-title"> <i id="iconChevronNotif"
                                            class="bi bi-chevron-right"></i> <i id="IconBellNofif"
                                            class="bi bi-bell-fill"></i></i>
                                        <a id="spanNofif"
                                            href="page-utilisateur-notification.html">Notifications</a>
                                    </div>
                                    <div id="subMenuNotif" class="sub-menu slide-item">
                                        <div id="tabNotifAcc" class="sub-title"
                                            data-scrollto="account-notification">
                                            <a href="page-utilisateur-notification.html">Notifications du compte</a></div>
                                        <div id="tabNotifEmail" class="sub-title"
                                            data-scrollto="email-notification">
                                            <a href="page-utilisateur-notification.html">Notifications par courriel</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Paramètre sécurité -->
                                <div id="paramèteSécurité"
                                    class="settings-button slide-in-out ts-500 security closed">
                                    <div id="paramètreSécuritéHeadTitle" class="head-title"> <i
                                            id="iconChevronSécurité" class="bi bi-chevron-down"></i> <i
                                            id="iconShieldSécurité" class="bi bi-shield-lock-fill"></i> <a
                                            id="spanSécurité" href="page-utilisateur-sécutité.html">Sécurité</a>
                                    </div>
                                    <div id="subMenuSécurité" class="sub-menu slide-item">
                                        <div id="tabChangePass" class="sub-title" data-scrollto="change-password">
                                            <a href="page-utilisateur-sécutité.html">Changer le mot
                                                de passe</a>
                                        </div>
                                        <div id="tabChangeEmail" class="sub-title acc-setting-menu-change-em"
                                            data-scrollto="change-email"><a href="page-utilisateur-sécutité.html">Changer
                                                l’adresse courriel</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><br>
                    <div class="col-xs-6 col-md-6">

                    </div><br>

                </section>
            </div>
            <div class="col-md-6 mt-4">

                <!-- ******************Espace Utilisateur********************* -->
                <section>
                    <div class="row">
                        <div class="col-12">
                            <div id="accProfil" class="col-12">
                                <!-- boîte gauche 1 profil -->
                                <div id="accProfilSettingleft" class="settings-left-block">
                                    <div id="accTitleTxtleft1" class="title-txt">Profil</div>
                                </div>
                                <!-- boîte droite 1 -->
                                <div id="accProfilSettingRight" class="settings-right-block">
                                    <!-- séparation 1 -->
                                    <hr>
                                    <form action="r" method="post" accept-charset="utf-8" class="form" role="form">
                                        <div id="fmContainerFluid" class="container-fluid">
                                            <div id="fmAccMainContainer" class="row">
                                                <div id="divAvatar" class="col-xs-6 col-md-6">
                                                    <p class="avatarText">Avatar</p> 
                                                    <div>
                                                        {% if app.user.avatarUser is same as null %}
                                                            <a id="avatarUser" class="nav-link active" >
                                                                <i class=""><img class="" src="{{ asset('icons/default.png') }}" alt=""/></i>
                                                            </a>
                                                        {% else %}
                                                            <a id="avatarUser" class="nav-link active" >
                                                                <i class=""><img src=" {{ asset(app.user.avatarUser) }}" alt=""></i>
                                                            </a>
                                                        {% endif %} 
                                                    </div>
                                                </div>
                                                <hr>
                                                <br>
                                                <div id="divPseudo" class="col-xs-6 col-md-6">
                                                    <i class="bi bi-person"></i> Pseudo
                                                    <input id="inputPseudo"
                                                        class="form-control input-lg" placeholder="{{ app.user.pseudo }}" />
                                                </div><br>
                                                <div id="divPrénom" class="col-xs-6 col-md-6">Prénom
                                                    <input id="inputPrénom" class="form-control input-lg" placeholder="{{ app.user.firstname }}" />
                                                </div>
                                                <div id="divNom" class="col-xs-6 col-md-6">Nom
                                                    <input id="inputNom" class="form-control input-lg" placeholder="{{ app.user.lastname }}" />
                                                </div><br>
                                                <div id="labelBirthay" class="col-xs-6 col-md-6" style="margin-left: -24px;">
                                                    <i class="bi bi-calendar-date"></i> Date
                                                    de naissance :
                                                    <input id="inputPseudo" class="form-control input-lg" placeholder="{{ app.user.birthdate ? app.user.birthdate|date('d-m-Y') : '' }}" />
                                                </div><br>
                                                <!-- **************Pays*************** -->
                                                <div id="labelCountry" class="col-xs-6 col-md-4"><i class="fas fa-globe-americas"></i> Pays :
                                                    <input id="inputPseudo" class="form-control input-lg" placeholder="{{ app.user.country }}" />
                                                </div>
                                                        <br>
                                                <div class="row">
                                                    <div class="col-xs-6 col-md-6">
                                                        <a class="btn btn-lg btn-primary btn-block signup-btn"href="{{ path('user_profil_edit') }}">Éditer</a>
                                                        <div class="maDiv1"></div>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <!-- boîte gauche 2 profil -->
                                                    <div id="accProfilSettingleft" class="settings-left-block">
                                                        <div id="accTitleTxtleft2" class="title-txt">Préférences
                                                        </div>
                                                    </div>
                                                    <!-- boîte droite 2 -->
                                                    <div id="accProfilSettingRight" class="settings-right-block">
                                                        <!-- séparation 2 -->
                                                        <hr>
                                                        <form action="r" method="post" accept-charset="utf-8"
                                                            class="form" role="form">
                                                            <div class="container-fluid">
                                                                <div class="row">
                                                                    <h3 id="accVosPlateform"><i
                                                                            class="fas fa-gamepad"></i> Vos
                                                                        plateforme
                                                                    </h3>
                                                                    <div id="accPlaystation"
                                                                        class="col-xs-6 col-md-6">
                                                                        <i class="fab fa-playstation">
                                                                            Playstation</i>
                                                                        <input type="checkbox" id="playstation"
                                                                            name="playstation" checked>
                                                                        <label for="playstation"></label>
                                                                    </div><br>
                                                                    <div id="accXbox" class="col-xs-6 col-md-6">
                                                                        <i class="fab fa-xbox"> Xbox</i>
                                                                        <input type="checkbox" id="xbox" name="xbox"
                                                                            checked>
                                                                        <label for="xbox"></label>
                                                                    </div><br>
                                                                    <div id="accNintendo" class="col-xs-6 col-md-6">
                                                                        <i class="nintendo"> Nintendo</i>
                                                                        <input type="checkbox" id="nintendo"
                                                                            name="nintendo" checked>
                                                                        <label for="nintendo"></label>
                                                                    </div><br>
                                                                    <div id="accSteam" class="col-xs-6 col-md-6">
                                                                        <i class="fab fa-steam"> Steam</i>
                                                                        <input type="checkbox" id="steam"
                                                                            name="steam" checked>
                                                                        <label for="steam"></label>
                                                                    </div><br>
                                                                    <div id="accTwitch" class="col-xs-6 col-md-6">
                                                                        <i class="fab fa-twitch"> Twicth</i>
                                                                        <input type="checkbox" id="twicth"
                                                                            name="twicth" checked>
                                                                        <label for="twicth"></label>
                                                                        <div class="maDiv1"></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div><br>
                                                <!-- **********Supprimer le compte -->
                                                <div id="deleteAcc" class="col-12">
                                                    <div id="accProfilSettingleft" class="settings-left-block">
                                                        <div id="accTitleTxtleft3" class="title-txt">Supprimer le
                                                            compte
                                                        </div>
                                                    </div>
                                                    <!-- boîte droite 3 -->
                                                    <div id="accProfilSettingRight" class="settings-right-block">
                                                        <!-- séparation 2 -->
                                                        <hr>
                                                        <form method="post"  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');">
                                                            <div class="container-fluid">
                                                                <div class="row">
                                                                    <div class="settings-left-block">
                                                                        <div class="content-txt">
                                                                            <i class="fas fa-exclamation-triangle"></i><span class="red"> Avertissement&nbsp;:</span>
                                                                            Après avoir confirmé cette action, vous ne pourrez ni accéder aux données de votre compte, ni à vos contacts, ni à vos conversations sur Mugamax.
                                                                        </div><br>
                                                                        <div class="col-xs-6 col-md-6">
                                                                    </div>
                                                                    <div id="deleteButtonSettingRight" class="settings-right-block">
                                                                        <div class="settings-sub-section justify-end"> 
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                                                                        <button class="buttonDeleteAcc"> <span>Supprimer le compte</span> </button> 
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}
