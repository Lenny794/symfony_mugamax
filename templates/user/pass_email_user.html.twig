                                                        <hr>
                                                        <form action="r" method="post" accept-charset="utf-8"
                                                            class="form" role="form">
                                                            <div class="container-fluid">
                                                                <div class="row">

                                                                    <div class="col-xs-6 col-md-8">
                                                                        <i class="fas fa-envelope"></i>
                                                                        E-mail : 
                                                                        <input type="text" name="email" value=""
                                                                            class="form-control input-lg"
                                                                            placeholder="{{ app.user.email }}" /><br>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>
                                                        <br>
                                                        <div class="row">
                                                            <div class="col-xs-6 col-md-6">
                                                                <a class="btn btn-lg btn-primary btn-block signup-btn"href="{{ path('user_mail_edit') }}">Éditer</a>
