                                <div id="accProfil" class="col-12">
                                    <!-- boîte Changer mot de Passe -->
                                    <div id="accProfilSettingleft" class="settings-left-block">
                                        <div id="accTitleTxtleft1" class="title-txt">Changer le mot de passe</div>
                                    </div>
                                    <!-- boîte droite 1 -->
                                    <div id="accProfilSettingRight" class="settings-right-block">
                                        <!-- séparation 1 -->
                                        <hr>
                                        <form action="r" method="post" accept-charset="utf-8" class="form" role="form">
                                            <div id="fmContainerFluid" class="container-fluid">
                                                <div id="fmAccMainContainer" class="row">
                                                    <div class="col-xs-6 col-md-4">
                                                        <i class="fas fa-unlock-alt"></i>
                                                        Mot de Passe Actuel
                                                        <input type="password" name="password" value=""
                                                            class="form-control input-lg"
                                                            placeholder="*******************" /><br>
                                                    </div>
                                                        <div class="row">
                                                            <div class="col-xs-6 col-md-6">
                                                                <a class="btn btn-lg btn-primary btn-block signup-btn"href="{{ path('user_password_edit') }}">Éditer</a>
                                                                <div class="maDiv1"></div>
                                                            </div>
                                                        </div>
                                                    <br>
                                                    
                                                    <!-- **************Changer Adresse E-mail*************** -->

                                                    <!-- boîte gauche 2 Notification -->
                                                    <div id="accProfilSettingleft" class="settings-left-block">
