{% extends 'base.html.twig' %}
{% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Icon Bootstrap -->   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/nav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/indentification.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font.css') }}">
{% endblock %}
{% block title %}Se connecter/Crée un compte{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecter en tant que {{ app.user.pseudo }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div>
            <div class="container my-4">
            <div id="blockLeftAndRight" class="row">
                <div id="login" class="col-md-5 mt-4">
                    <!-- ********************Se-connecter******************************************* -->
                    <h2>Se connecter</h2>
                    <form action="r" method="post" accept-charset="utf-8" class="form" role="form">
                        <div class="row">
                            <div class="col-xs-6 col-md-6">
                                <input type="text" name="Nom d'utilisateur" value="" class="form-control input-lg"
                                    placeholder="Nom d'utilisateur" />
                            </div>
                        </div><br>
                        <div class="col-xs-6 col-md-6">
                            <input type="password" name="Mot de passe" value="" class="form-control input-lg"
                                placeholder="Mot de passe" />
                        </div><br>

                        <button id="loginButton" class="btn btn-lg btn-primary btn-block signup-btn" type="submit">Se
                            connecter</button>
                    </form>
                </div>
                <div id="signUp" class="col-md-6 mt-4">

                    <!-- ******************Créer un compte********************* -->
                    <h2>Créer un compte</h2>
                    <form id="signUpForm" action="r" method="post" accept-charset="utf-8" class="form" role="form">

                        <label>Genre : </label><br>
                        <label class="radio-inline">
                            <i class="fas fa-male"></i> Homme <input type="radio" name="gender" value="M" id=male />
                        </label>
                        <label id="labelFemale" class="radio-inline">
                            <i class="fas fa-female"></i> Femme <input type="radio" name="gender" value="F" id=female />
                        </label><br></br>

                        <div class="row">
                            <div class="col-xs-6 col-md-6">
                                <input type="text" name="firstname" value="" class="form-control input-lg"
                                    placeholder="Prénom" />
                            </div>
                            <div class="col-xs-6 col-md-6">
                                <input type="text" name="lastname" value="" class="form-control input-lg"
                                    placeholder="Nom de famille" />
                            </div>
                        </div><br>

                        <div class="col-xs-6 col-md-6">
                            <input type="text" name="Nom d'utilisateur" value="" class="form-control input-lg"
                                placeholder="Nom d'utilisateur" />
                        </div><br>

                        <input type="text" name="email" value="" class="form-control input-lg"
                            placeholder="@example.com" /><br>
                        <div class="col-xs-6 col-md-6">
                            <input type="password" name="password" value="" class="form-control input-lg"
                                placeholder="Mot de passe" /><br>
                            <input type="password" name="confirm_password" value="" class="form-control input-lg"
                                placeholder="Confirmer mot de passe" /><br>
                        </div>
                        <label>Date de naissance :</label>
                        <div class="row">
                            <div class="col-xs-4 col-md-4">
                                <select name="day" class="form-control input-lg">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
