                                                <div id="divNom" class="col-xs-6 col-md-6">
                                                    {{ form_row(form.lastname) }}
                                                </div><br>
                                                <div id="labelBirthay" class="bi bi-calendar-date">
                                                    {{ form_row(form.birthdate) }}
